FROM continuumio/miniconda3:4.12.0
ADD ./requirements.deploy.txt  /tmp/requirements.txt

RUN apt-get update
RUN apt-get install -y --no-install-recommends build-essential gfortran cmake vim curl
ENV LANG pt_BR.UTF-8

RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y && \
    echo 'source $HOME/.cargo/env' >> $HOME/.bashrc

RUN conda init bash
RUN conda create -n deploy python=3.8

SHELL ["conda", "run", "-n", "deploy", "/bin/bash", "-c"]
RUN source $HOME/.bashrc && pip3 install --no-cache-dir -r /tmp/requirements.txt
RUN echo "conda activate deploy" >> ~/.bashrc